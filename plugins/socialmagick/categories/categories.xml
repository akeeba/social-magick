<extension type="plugin" group="socialmagick" method="upgrade">
    <name>PLG_SOCIALMAGICK_CATEGORIES</name>
    <version>3.0.0</version>
    <creationDate>2025-09-07</creationDate>
    <author>Akeeba Ltd</author>
    <authorEmail>no-reply@akeeba.com</authorEmail>
    <authorUrl>https://www.akeeba.com</authorUrl>
    <copyright>Copyright (c)2025 Akeeba Ltd</copyright>
    <license>GPL-3.0-or-later</license>
    <description>PLG_SOCIALMAGICK_CATEGORIES_XML_DESC</description>
    <namespace path="src">Akeeba\Plugin\SocialMagick\Categories</namespace>

    <files>
        <folder>form</folder>
        <folder plugin="categories">services</folder>
        <folder>src</folder>
        <folder>tmpl</folder>

        <filename>.htaccess</filename>
        <filename>web.config</filename>
    </files>

    <languages folder="language">
        <language tag="en-GB">en-GB/plg_socialmagick_categories.sys.ini</language>
        <language tag="en-GB">en-GB/plg_socialmagick_categories.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="image_source"
                        type="list"
                        label="PLG_SOCIALMAGICK_CATEGORIES_CONFIG_IMAGE_SOURCE_LABEL"
                        description="PLG_SOCIALMAGICK_CATEGORIES_CONFIG_IMAGE_SOURCE_DESC"
                        class="btn-group btn-group-yesno"
                        default="customcategory"
                >
                    <option value="none">PLG_SOCIALMAGICK_CATEGORIES_CONFIG_IMAGE_SOURCE_OPT_NONE</option>
                    <option value="category">PLG_SOCIALMAGICK_CATEGORIES_CONFIG_IMAGE_SOURCE_OPT_CATEGORY</option>
                    <option value="custom">PLG_SOCIALMAGICK_CATEGORIES_CONFIG_IMAGE_SOURCE_OPT_CUSTOMFIELD</option>
                    <option value="customcategory">PLG_SOCIALMAGICK_CATEGORIES_CONFIG_IMAGE_SOURCE_OPT_CUSTOMCATEGORY</option>
                </field>

                <field
                        name="image_field"
                        type="text"
                        label="PLG_SOCIALMAGICK_CATEGORIES_CONFIG_FIELD_IMAGE_FIELD_LABEL"
                        description="PLG_SOCIALMAGICK_CATEGORIES_CONFIG_FIELD_IMAGE_FIELD_DESC"
                        default="ogimage"
                        filter="no_html"
                />

                <field
                        name="use_article"
                        type="radio"
                        layout="joomla.form.field.radio.switcher"
                        label="PLG_SOCIALMAGICK_CATEGORIES_CONFIG_USE_ARTICLE_LABEL"
                        description="PLG_SOCIALMAGICK_CATEGORIES_CONFIG_USE_ARTICLE_DESC"
                        default="1"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field
                        name="use_article_description"
                        type="radio"
                        layout="joomla.form.field.radio.switcher"
                        label="PLG_SOCIALMAGICK_CATEGORIES_CONFIG_USE_ARTICLE_DESCRIPTION_LABEL"
                        description="PLG_SOCIALMAGICK_CATEGORIES_CONFIG_USE_ARTICLE_DESCRIPTION_DESC"
                        default="1"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
            <fieldset>
                <field
                        name="edititem_frontend"
                        type="radio"
                        layout="joomla.form.field.radio.switcher"
                        label="PLG_SOCIALMAGICK_CATEGORIES_CONFIG_EDITITEM_FRONTEND_LABEL"
                        description="PLG_SOCIALMAGICK_CATEGORIES_CONFIG_EDITITEM_FRONTEND_DESC"
                        default="1"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field
                        name="edititem_groups"
                        type="usergrouplist"
                        label="PLG_SOCIALMAGICK_CATEGORIES_CONFIG_GROUPS_EDITITEM_LABEL"
                        description="PLG_SOCIALMAGICK_CATEGORIES_CONFIG_GROUPS_EDITITEM_DESC"
                        multiple="true"
                        default=""
                        checksuperusergroup="0"
                        layout="joomla.form.field.list-fancy-select"
                        filter="intarray"
                />

            </fieldset>
        </fields>
    </config>
</extension>
