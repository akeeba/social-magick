<form addfieldprefix="Akeeba\Component\SocialMagick\Administrator\Field">
    <fields name="filter">
        <field
                name="search"
                type="text"
                inputmode="search"
                label="JSEARCH_FILTER"
                hint="JSEARCH_FILTER"
        />
    </fields>

    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="JGLOBAL_SORT_BY"
                statuses="*,0,1"
                onchange="this.form.submit();"
                default="ordering ASC"
                validate="options"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="id ASC">JGRID_HEADING_ID_ASC</option>
            <option value="id DESC">JGRID_HEADING_ID_DESC</option>
            <option value="title ASC">JGLOBAL_TITLE_ASC</option>
            <option value="title DESC">JGLOBAL_TITLE_DESC</option>
            <option value="ordering ASC">JGLOBAL_TITLE_ASC</option>
            <option value="ordering DESC">JGLOBAL_TITLE_DESC</option>
        </field>

        <field
                name="limit"
                type="limitbox"
                label="JGLOBAL_LIST_LIMIT"
                default="25"
                onchange="this.form.submit();"
        />
    </fields>
</form>