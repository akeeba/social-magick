<form>
    <fields name="socialmagick" addfieldprefix="Akeeba\Component\SocialMagick\Administrator\Field">
        <fieldset name="socialmagick"
                  label="COM_SOCIALMAGICK_FORM_COMMON_FIELDSET_SOCIALMAGICK_HEAD"

        >
            <field name="socialmagick_zzz_001"
                   type="note"
                   heading="h4"
                   label="COM_SOCIALMAGICK_FORM_COMMON_OVERRIDE_OPENGRAPH_IMAGE"
                   class="w-100"
            />

            <field
                    name="category_override"
                    type="radio"
                    layout="joomla.form.field.radio.switcher"
                    label="COM_SOCIALMAGICK_FORM_COMMON_OVERRIDE_LABEL"
                    description="COM_SOCIALMAGICK_FORM_CATEGORY_OVERRIDE_DESC"
                    class="btn-group btn-group-yesno"
                    default="0"
            >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field
                    name="category_generate_images"
                    type="radio"
                    label="COM_SOCIALMAGICK_FORM_COMMON_GENERATE_IMAGES_LABEL"
                    description="COM_SOCIALMAGICK_FORM_COMMON_GENERATE_IMAGES_DESC"
                    class="btn-group btn-group-yesno"
                    default="-1"
                    showon="category_override:1"
            >
                <option value="0">JNO</option>
                <option value="-1">JGLOBAL_INHERIT</option>
                <option value="1">JYES</option>
            </field>

            <field
                    name="category_override_og"
                    type="radio"
                    label="COM_SOCIALMAGICK_FORM_COMMON_OVERRIDE_OG_LABEL"
                    description="COM_SOCIALMAGICK_FORM_COMMON_OVERRIDE_OG_DESC"
                    class="btn-group btn-group-yesno"
                    default="-1"
                    showon="category_override:1[AND]category_generate_images!:0"
            >
                <option value="0">JNO</option>
                <option value="-1">JGLOBAL_INHERIT</option>
                <option value="1">JYES</option>
            </field>

            <field
                    name="category_template"
                    type="socialmagicktemplate"
                    label="COM_SOCIALMAGICK_FORM_COMMON_TEMPLATE_LABEL"
                    description="COM_SOCIALMAGICK_FORM_COMMON_TEMPLATE_DESC"
                    validate="options"
                    showon="category_override:1[AND]category_generate_images!:0"
            >
                <option value="">JGLOBAL_INHERIT</option>
            </field>

            <field
                    name="category_custom_text"
                    type="text"
                    label="COM_SOCIALMAGICK_FORM_COMMON_CUSTOM_TEXT_LABEL"
                    description="COM_SOCIALMAGICK_FORM_COMMON_CUSTOM_TEXT_DESC"
                    filter="no_html"
                    showon="category_override:1[AND]category_generate_images!:0"
            />

            <field
                    name="category_use_article"
                    type="radio"
                    label="COM_SOCIALMAGICK_FORM_COMMON_USE_ARTICLE_LABEL"
                    description="COM_SOCIALMAGICK_FORM_COMMON_USE_ARTICLE_DESC"
                    class="btn-group btn-group-yesno"
                    default="-1"
                    showon="category_override:1[AND]category_generate_images!:0"
            >
                <option value="0">JNO</option>
                <option value="-1">JGLOBAL_INHERIT</option>
                <option value="1">JYES</option>
            </field>

            <field
                    name="category_use_title"
                    type="radio"
                    label="COM_SOCIALMAGICK_FORM_COMMON_USE_TITLE_LABEL"
                    description="COM_SOCIALMAGICK_FORM_COMMON_USE_TITLE_DESC"
                    class="btn-group btn-group-yesno"
                    default="-1"
                    showon="category_override:1[AND]category_generate_images!:0"
            >
                <option value="0">JNO</option>
                <option value="-1">JGLOBAL_INHERIT</option>
                <option value="1">JYES</option>
            </field>

            <field
                    name="category_image_source"
                    type="list"
                    label="COM_SOCIALMAGICK_FORM_COMMON_IMAGE_SOURCE_LABEL"
                    description="COM_SOCIALMAGICK_FORM_COMMON_IMAGE_SOURCE_DESC"
                    class="btn-group btn-group-yesno"
                    default=""
                    validate="options"
                    showon="category_override:1[AND]category_generate_images!:0"
            >
                <option value="">JGLOBAL_INHERIT</option>
                <option value="none">COM_SOCIALMAGICK_FORM_COMMON_IMAGE_SOURCE_OPT_NONE</option>
                <option value="category">COM_SOCIALMAGICK_FORM_COMMON_IMAGE_SOURCE_OPT_CATEGORY</option>
                <option value="custom">COM_SOCIALMAGICK_FORM_COMMON_IMAGE_SOURCE_OPT_CUSTOMFIELD</option>
                <option value="customcategory">COM_SOCIALMAGICK_FORM_COMMON_IMAGE_SOURCE_OPT_CUSTOMCATEGORY</option>
                <option value="static">COM_SOCIALMAGICK_FORM_COMMON_IMAGE_SOURCE_OPT_STATIC</option>
            </field>

            <field
                    name="category_image_field"
                    type="text"
                    label="COM_SOCIALMAGICK_FORM_COMMON_IMAGE_FIELD_LABEL"
                    description="COM_SOCIALMAGICK_FORM_COMMON_IMAGE_FIELD_DESC"
                    default=""
                    filter="no_html"
                    showon="category_override:1[AND]category_image_source:custom[OR]category_image_source:customcategory[AND]category_generate_images!:0"
            />

            <field
                    name="category_static_image"
                    type="media"
                    label="COM_SOCIALMAGICK_FORM_COMMON_STATIC_IMAGE_LABEL"
                    description="COM_SOCIALMAGICK_FORM_COMMON_STATIC_IMAGE_DESC"
                    hide_none="1"
                    default=""
                    showon="category_override:1[AND]category_image_source:static[AND]category_generate_images!:0"
            />

            <!-- ================================================================================ -->

            <field name="socialmagick_zzz_002"
                   type="note"
                   heading="h4"
                   label="COM_SOCIALMAGICK_CONFIG_FIELDSET_OGTAGS_LABEL"
                   class="w-100"
            />

            <field
                    name="category_og_title"
                    type="list"
                    label="COM_SOCIALMAGICK_CONFIG_OG_TITLE_LABEL"
                    description="COM_SOCIALMAGICK_CONFIG_OG_TITLE_DESC"
                    validate="options"
                    default="-1"
            >
                <option value="-1">JGLOBAL_INHERIT</option>
                <option value="0">COM_SOCIALMAGICK_CONFIG_OG_TITLE_OPT_NO</option>
                <option value="1">COM_SOCIALMAGICK_CONFIG_OG_TITLE_OPT_JOOMLA</option>
                <option value="2">COM_SOCIALMAGICK_CONFIG_OG_TITLE_OPT_CUSTOM</option>
            </field>

            <field
                    name="category_og_title_custom"
                    type="text"
                    label="COM_SOCIALMAGICK_CONFIG_OG_TITLE_CUSTOM_LABEL"
                    description="COM_SOCIALMAGICK_CONFIG_OG_TITLE_CUSTOM_DESC"
                    default=""
                    filter="no_html"
                    showon="category_og_title:2"
            />

            <field
                    name="category_og_description"
                    type="list"
                    label="COM_SOCIALMAGICK_CONFIG_OG_DESCRIPTION_LABEL"
                    description="COM_SOCIALMAGICK_CONFIG_OG_DESCRIPTION_DESC"
                    validate="options"
                    default="-1"
            >
                <option value="-1">JGLOBAL_INHERIT</option>
                <option value="0">COM_SOCIALMAGICK_CONFIG_OG_DESCRIPTION_OPT_NO</option>
                <option value="1">COM_SOCIALMAGICK_CONFIG_OG_DESCRIPTION_OPT_JOOMLA</option>
                <option value="2">COM_SOCIALMAGICK_CONFIG_OG_DESCRIPTION_OPT_CUSTOM</option>
            </field>

            <field
                    name="category_og_description_custom"
                    type="text"
                    label="COM_SOCIALMAGICK_CONFIG_OG_DESCRIPTION_CUSTOM_LABEL"
                    description="COM_SOCIALMAGICK_CONFIG_OG_DESCRIPTION_CUSTOM_DESC"
                    default=""
                    filter="no_html"
                    showon="category_og_description:2"
            />

            <field
                    name="category_og_url"
                    type="radio"
                    label="COM_SOCIALMAGICK_CONFIG_OG_URL_LABEL"
                    description="COM_SOCIALMAGICK_CONFIG_OG_URL_DESC"
                    class="btn-group btn-group-yesno"
                    default="-1"
            >
                <option value="0">JNO</option>
                <option value="-1">JGLOBAL_INHERIT</option>
                <option value="1">JYES</option>
            </field>

            <field
                    name="category_og_site_name"
                    type="radio"
                    label="COM_SOCIALMAGICK_CONFIG_OG_SITE_NAME_LABEL"
                    description="COM_SOCIALMAGICK_CONFIG_OG_SITE_NAME_DESC"
                    class="btn-group btn-group-yesno"
                    default="-1"
            >
                <option value="0">JNO</option>
                <option value="-1">JGLOBAL_INHERIT</option>
                <option value="1">JYES</option>
            </field>

            <field
                    name="category_twitter_card"
                    type="list"
                    label="COM_SOCIALMAGICK_CONFIG_TWITTER_CARD_LABEL"
                    description="COM_SOCIALMAGICK_CONFIG_TWITTER_CARD_DESC"
                    validate="options"
                    default="-1"
            >
                <option value="-1">JGLOBAL_INHERIT</option>
                <option value="0">COM_SOCIALMAGICK_CONFIG_TWITTER_CARD_OPT_NONE</option>
                <option value="1">COM_SOCIALMAGICK_CONFIG_TWITTER_CARD_OPT_SUMMARY</option>
                <option value="2">COM_SOCIALMAGICK_CONFIG_TWITTER_CARD_OPT_SUMMARY_LARGE</option>
            </field>

            <field
                    name="category_twitter_site"
                    type="text"
                    label="COM_SOCIALMAGICK_CONFIG_TWITTER_SITE_LABEL"
                    description="COM_SOCIALMAGICK_CONFIG_TWITTER_SITE_DESC"
                    default=""
                    filter="no_html"
                    showon="category_twitter_card!:0"
            />

            <field
                    name="category_twitter_creator"
                    type="text"
                    label="COM_SOCIALMAGICK_CONFIG_TWITTER_CREATOR_LABEL"
                    description="COM_SOCIALMAGICK_CONFIG_TWITTER_CREATOR_DESC"
                    default=""
                    filter="no_html"
                    showon="category_twitter_card!:0"
            />

            <field
                    name="category_fb_app_id"
                    type="text"
                    label="COM_SOCIALMAGICK_CONFIG_FB_APP_ID_LABEL"
                    description="COM_SOCIALMAGICK_CONFIG_FB_APP_ID_DESC"
                    default=""
                    filter="no_html"
            />
        </fieldset>
    </fields>
</form>